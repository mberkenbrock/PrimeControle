        <!--TABLE-->
        @using System.Configuration;
        @using WebMatrix.Data;
        
        @{
           
            var db = Database.Open("DB_ESTUDOS");
           
            var selectQuery = "SELECT * FROM TB_CADASTRO_CLIENTE";

        }
       
        <br />

    <table style=" width:auto;height:300px;" class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">NOME</th>
                <th scope="col">CPF</th>
                <th scope="col">CELULAR</th>
                <th scope="col">EMAIL</th>
                <th scope="col">CEP</th>
                <th scope="col">CIDADE</th>
                <th scope="col">ENDERECO</th>
                <th scope="col">BAIRRO</th>
                <th scope="col">ESTADO</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var row in db.Query(selectQuery))
            {
            <tr>
                <th scope="row">@row.ID</th>
                <td>@row.NM_CLIENTE</td>
                <td>@row.CPF</td>
                <td>@row.CEL_CLIENTE</td>
                <td>@row.EMAIL_CLIENTE</td>
                <td>@row.CEP</td>
                <td>@row.CIDADE</td>
                <td>@row.ENDERECO</td>
                <td>@row.BAIRRO</td>
                <td>@row.ESTADO</td>
                
            </tr>
            }
        </tbody>
    </table>
      
        <!--END TABLE-->
